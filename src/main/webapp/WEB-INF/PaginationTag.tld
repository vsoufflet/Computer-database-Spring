<?xml version="1.0" encoding="UTF-8"?>
<taglib xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
    version="2.1">
    <description>Pagination taglib</description>
<tlib-version>1.0</tlib-version>
<short-name>paging</short-name>
<uri>http://osef.com</uri>
<tag>
<description>Create a pagination</description>
<name>display</name>
<tag-class>com.excilys.computerdatabase.view.PaginationTag</tag-class>
<body-content>empty</body-content>
<attribute>
<name>totalRecords</name>
<required>true</required>
<rtexprvalue>true</rtexprvalue>
</attribute>
<attribute>
<name>recordsPerPage</name>
<required>true</required>
<rtexprvalue>true</rtexprvalue>
</attribute>
</tag>
</taglib> 